$color_p = #000
$color_s = #212121
$color_t = #3D3D3D
$color_f = #d7ab9e
$color_b = #797979
$color_int = #000
$color_title = #000
$fonttext = 'Arial'
$fonttext_f1 ='RobotoCondensed-Bold'
$fonttext_f2 ='RobotoCondensed-Regular'
$fonttext_f3 ='RobotoCondensed-Regular'
$fonttext_o1 = 'RobotoCondensed-Regular'
$fonttext_o2 = 'RobotoCondensed-Regular'
$font_size_h1 = 25px
$font_size_h2 = 19px

.order_detail
	color #333
	h2
		color #333
		font-size 22px
		text-align left
		padding 0 0 5px 0
		letter-spacing -1px
		margin 5px 0 5px
		font-weight normal
		width 100%
		float left
	.to_order, .from_order, .your_order, .payment_method
		margin 20px 0 20px
		/*border-left 1px solid #e1e1e1
		padding 0 0 0 30px*/
		strong
			font-size 30px
			color $color_s
			font-weight normal
			width 100%
			float left
			margin 10px 0 10px 0
			span
				font-size 18px
				color #333
				font-weight normal
		p
			margin 0 0 2px 0
			display inline-block
			width 100%

			span
				width 150px
				float left
			small
				width auto
				float left
				font-size 14px
				font-weight bold

	.payment_method
		.payment_method_order
			height 50px
			display block
			width 100%
			margin 0 0 -4px 0
	.paymeans_btn
		text-align center
		display inline-block
		margin 35px 0 0 0
		.button_paynow
			padding 8px 55px
			background #c00008
			border 1px solid #c00008

