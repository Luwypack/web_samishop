	.product_list
		margin 45px 0 0 0
		display block

		.row_header
			border-bottom  1px solid #dde0e2
			margin  -12px 0 0px 0
			padding  0 0 5px 0
			.title
				font-size 13px
				width 100%
				text-align left
				display block
				font-weight bold
			.title_right
				text-align right
				font-size 13px
				width 100%
				display block
				font-weight bold

		.row_item
			display block
			padding 10px 0 0 0
			border-bottom 1px solid #dde0e2
			p
				font-size 14px
				margin 0 0 7px 0

			.item_qty
				width 100%
				text-align center
				display block
				input
					width 50px
					border  1px solid #dde0e2
					text-align  center
					color  #999
					font-size  13px
					padding  2px 0px
				span
					color: #EF8703;
					font-weight: bold;
					line-height: 15px;
					font-size: 12px;
					margin: 10px 0 0 0;
					width: 100%;
					float: left;


			.item_price
				width 100%
				text-align right
				display block
				span
					color #991010
					font-size 15px
					font-weight bold
			.item_subtotal
				width 100%
				text-align right
				display block
				span
					color #991010
					font-size 15px
					font-weight bold
		.saved
			border-top 1px solid #dde0e2
			border-bottom none


	.summary_orderdetail
		hr
			border-top 1px solid #dde0e2


		.summary
			margin 25px 0 0 0
			display block
			p
				span
					font-size 15px
					color
			.item_subtotal, .item_ship, .item_tax, .item_total
				b
					float right
			.item_ship
				color $color_s
			.item_total
				color $color_p
				font-weight bold
				font-size 18px
				span
					font-size 17px






@media (max-width:767px)
	.summary_orderdetail
		background #f1f1f1
		padding-bottom 15px
		hr
			border-top 1px solid #fff
