@media (min-width:1367px) and (max-width:1950px)
	#content
		.recovery
			.bredcrumb, .page_breadcrumb, .breadcrumb, .breadcrumbs
				margin-top 130px
			.form_containerzx
				.buttons_group
					.btn-action
						margin 40px 0 130px
			strong
				margin 200px 0 20px
			.form_btn
				margin 60px 0 190px

@media (max-width:767px)
	#content
		.recovery
			.form-group
				width auto
				.nickname
					width 100%
			.form_containerzx
				.form-group
					width 100%



@media (max-width:479px)

	#content
		.recovery
			.form_containerzx
				h1
					line-height 52px