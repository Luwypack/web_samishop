$color_p = #000
$color_s = #212121
$color_t = #3D3D3D
$color_f = #d7ab9e
$color_b = #797979
$color_int = #000
$color_title = #000
$fonttext = 'Arial'
$fonttext_f1 ='RobotoCondensed-Bold'
$fonttext_f2 ='RobotoCondensed-Regular'
$fonttext_f3 ='RobotoCondensed-Regular'
$fonttext_o1 = 'RobotoCondensed-Regular'
$fonttext_o2 = 'RobotoCondensed-Regular'
$font_size_h1 = 25px
$font_size_h2 = 19px
#content
	.recovery
		display block
		margin 10px 0 0 0
		.col-md-15, .col-lg-15
			display none !important
		.col-md-30, .col-lg-30
			width 100% !important
		strong
			font-size $font_size_h1
			font-weight normal
			text-align left
			display block
			margin 20px 0 20px 0
			font-family $fonttext_o1
			color $color_p
			border-bottom none
			letter-spacing -1px
			text-transform none
		.form-group
			display block
			width 75%
			margin 0
			clear both
			padding 15px 0 0 0
			input
				border-radius 0px
				margin 0 0 15px 0
				border 1px solid #cccccc
			label
				display block
				font-size 14px
				color $color_p
				font-weight normal
			.nickname
				width 50%
		.captcha
			input
				width 50%
				float right
		.form_btn
			display block
			text-align left
			margin 50px 0 40px 0
			height auto
			padding	5px 0px

			.btn_signin
				font-size 22px
				font-family $fonttext_o1
				text-transform none
				padding 5px 20px 5px
				border-radius 0px 0px 0px 0px
				-moz-border-radius 0px 0px 0px 0px
				-webkit-border-radius 0px 0px 0px 0px
				background $color_p
				&:hover
					background $color_b
					border-color $color_b

			p
				margin 10px 0 0 0
				display block
				color #333

		.form_containerzx
			h1
				border-bottom none
				color #000
				display block
				font-family $fonttext_f1
				font-size $font_size_h1
				font-weight normal
				letter-spacing -1px
				margin 0px 0 50px
				text-align left
				text-transform none
				padding 0 0 5px 0
			.buttons_group
				.btn-action
					margin 40px 0 120px 0
					padding-left 60px
					padding-right 60px
			.form-group
				width 35%
				padding 10px 0 0 0



